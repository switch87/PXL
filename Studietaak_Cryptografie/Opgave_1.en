$      tekst:=tekst+" ";
$    end;
$  endif;
$  V:=[];
$  for i=1 to strlen(tekst) step 1;
$    V:=V|ascii(substring(tekst,i,i));
$  end;
$  return V
$endfunction
>function zetOmTekst(V) ...
$  tekst:="";
$  for i=1 to length(V) step 1;
$    tekst:=tekst|char(V[i]);
$  end;
$  return tekst
$endfunction
